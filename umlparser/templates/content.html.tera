{% extends "base" %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <form action="/api/submit" method="post">
                <div class="form-group ">
                    <label for="textArea">Example textarea</label>
                    <textarea class="form-control z-depth-1" id="textArea" name="value" placeholder="abc -> fsafafa"
                              autofocus></textarea>
                </div>
                <input type="submit" value="Submit">
            </form>
        </div>
        <div class="col-xs-6">
            <p>{{ my_message }}</p>

        </div>
    </div>
</div>
{% endblock content %}